<div class="container">
  <h1 class="text-center my-2">All products</h1>
  <%= link_to "Add Product", new_product_path, class: "btn btn-ghost" %>

  <div class="cards">
    <% @products.each do |product| %>
      <%= link_to product_path(product), style: "text-decoration: none;" do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
          <%= product.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
